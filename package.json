{
  "name": "vscode-nastran",
  "displayName": "vscode-nastran",
  "description": "Syntax highlighting and documentation support for Nastran",
  "author": "Marcus Bakke",
  "version": "0.1.0",
  "publisher": "mbakke",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmarc3/vscode-nastran"
  },
  "icon": "icons/extension.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "languages": [
      {
        "id": "nastran",
        "aliases": [
          "Nastran",
          "NASTRAN",
          "Nastran",
          "nastran"
        ],
        "extensions": [
          ".bdf",
          ".dat",
          ".nas",
          ".inp"
        ],
        "icon": {
          "light": "./icons/nasa-light.png",
          "dark": "./icons/nasa-dark.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nastran",
        "scopeName": "source.nastran",
        "path": "./syntaxes/nastran.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "includeHierarchy",
          "name": "Include Hierarchy"
        }
      ]
    },
    "commands": [
      {
        "command": "includeHierarchy.buildHierarchy",
        "title": "Nastran: Build include tree hierarchy.",
        "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "includeHierarchy.buildHierarchy",
          "when": "view == includeHierarchy",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Nastran Server Configuration",
      "properties": {
        "nastranServer.Configuration": {
          "scope": "resource",
          "type": "string",
          "default": "You can override this message."
        }
      }
    },
    "semanticTokenTypes": [
      {
        "id": "field",
        "superType": "punctuation",
        "description": "Short or long format fields."
      },
      {
        "id": "subs",
        "superType": "markup",
        "description": "Substructure Control Deck."
      },
      {
        "id": "dmap",
        "superType": "string",
        "description": "Direct Matrix Abstraction Program."
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes":{
          "field": ["punctuation.definition.tag"],
          "subs": ["markup.inserted"],
          "dmap": ["constant.regexp"]
        }
      }
    ]
  },
  "capabilities": {
    "hoverProvider": "true"
  },
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "@types/vscode": "^1.75.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
